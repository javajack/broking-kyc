<style>
	@layer starlight.components {
		.author-footer {
			border-top: 1px solid var(--sl-color-gray-5);
			margin-top: 2rem;
			padding-top: 1.5rem;
			text-align: center;
		}
		.author-footer-inner {
			max-width: 36rem;
			margin: 0 auto;
		}
		.author-line {
			font-size: var(--sl-text-sm);
			color: var(--sl-color-gray-3);
			margin: 0 0 0.75rem;
		}
		.author-line strong {
			color: var(--sl-color-white);
		}
		.author-social {
			display: flex;
			justify-content: center;
			gap: 1.25rem;
			margin-bottom: 0.75rem;
		}
		.author-social a {
			display: inline-flex;
			align-items: center;
			gap: 0.35rem;
			font-size: var(--sl-text-xs);
			color: var(--sl-color-gray-3);
			text-decoration: none;
			transition: color 0.15s;
		}
		.author-social a:hover {
			color: var(--sl-color-accent);
		}
		.author-cta {
			font-size: var(--sl-text-xs);
			color: var(--sl-color-gray-3);
			margin: 0;
		}
		.author-cta a {
			color: var(--sl-color-accent);
			text-decoration: none;
			font-weight: 500;
		}
		.author-cta a:hover {
			text-decoration: underline;
		}
		.cookie-settings-link {
			font-size: var(--sl-text-xs);
			color: var(--sl-color-gray-4);
			margin: 0.75rem 0 0;
			display: flex;
			align-items: center;
			justify-content: center;
			gap: 0.5rem;
			flex-wrap: wrap;
		}
		.cookie-link-btn {
			background: none;
			border: none;
			color: var(--sl-color-accent);
			text-decoration: none;
			font-size: var(--sl-text-xs);
			cursor: pointer;
			padding: 0;
			font-weight: 500;
			transition: opacity 0.15s;
		}
		.cookie-link-btn:hover {
			text-decoration: underline;
			opacity: 0.8;
		}
		.privacy-notice {
			color: var(--sl-color-gray-4);
		}
		.footer-disclaimer {
			margin-top: 1rem;
			padding-top: 0.75rem;
			border-top: 1px solid var(--sl-color-gray-5);
		}
		.footer-disclaimer p {
			font-size: var(--sl-text-xs);
			color: var(--sl-color-gray-4);
			line-height: 1.6;
			margin: 0;
			max-width: 48rem;
		}
		.footer-disclaimer strong {
			color: var(--sl-color-gray-3);
		}
	}
</style>
